@model POSModel.AccountSubHeadModel

@{
    ViewBag.Title = "AccountSubHeadIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 1;
}

<div class="title clearfix">
    <h3>Account Sub Head </h3>
</div>
<button id="AddEditAccountSubHead" class="btn btn-add pull-right"><i class="fa fa-plus"></i> Add New</button>
<div class="clearfix"></div>

<div id="pop-up-div" class="modal fade" role="dialog">
</div>
<div class="content-table">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="width-30">
                        S.N.
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.AccountTypeID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.AccountSubTypeID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.AccountHeadID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.AccountSubHeadNameEnglish)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountSubHeadNameNepali)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FiscalYearID)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    

                    @*<th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrganizationID)
                    </th>*@

                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AccountSubHeadModelList)
                {
                    <tr>
                        <td>
                            @counter <a href="#" onclick="AddEditAccountSubHead('@item.AccountSubHeadID')"><i class="fa fa-edit"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountType)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubType)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.AccountHeadType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubHeadNameEnglish)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubHeadNameNepali)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FiscalYearID)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrganizationID)
                        </td>*@

                     

                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>


<script>


    $('#AddEditAccountSubHead').on('click', function () {
        AddEditAccountSubHead();
    });

    function AddEditAccountSubHead(uniqueId)
    {
        $.ajax({
            type: 'GET',
            url: '@Url.Content("~/SetUp/CreateEditAccountSubHead")',
            data: { accountSubHeadId: uniqueId },
            success: function (result) {
                $('#pop-up-div').html(result).modal({
                    'show': true,
                    'backdrop': 'static'
                })

            },
            error: function () {

            }
        });
    }

</script>