html, body {
    background: linear-gradient(to bottom, rgba(179,220,237,1) 0%, rgba(41,184,229,1) 39%, rgba(34,138,217,1) 55%, rgba(15,9,184,1) 100%);
    background: -moz-linear-gradient(top, rgba(179,220,237,1) 0%, rgba(41,184,229,1) 39%, rgba(34,138,217,1) 55%, rgba(15,9,184,1) 100%);
    color: #444;
    height: 100%;
    font-family: 'Work Sans', sans-serif;
}

.login-wrap {
    margin: auto;
    padding: 8% 0 0;
}

#login-box {
    background: #FFF;
    max-width: 320px;
    margin: 0 auto;
    padding: 15px;
    border-radius: 5px;
    font-family: Arial;
    box-shadow: 0 1px 3px rgba(0,0,0,.13);
}

    #login-box .panel-title {
        text-align: center;
        font-weight: 600;
        text-transform: uppercase;
    }

h2 img {
    margin-bottom: 10px;
}

#login-box .form-control; {
    width: 100%;
    height: 30px;
    padding-left: 10px;
    position: relative;
    border-radius: 0;
}

.validation-summary-errors {
    background: #fff;
    max-width: 320px;
    margin: auto;
    padding: 10px;
    margin-bottom: 10px;
    vertical-align: middle;
    border-radius: 5px;
    color: #000;
    font-weight: 400;
    font-size: 11px;
    padding-left: 13px;
    font-style: italic;
}

.field-validation-error {
    color: #da1919;
    font-size: 12px;
    margin-bottom: 5px;
    font-style: italic;
}

.validation-summary-errors ul {
    padding: 0 0 0 8px;
    margin: 0;
    border-left: 2px solid #da1960;

}

    .validation-summary-errors ul li {
        list-style: none;
    }

.panel-login > .panel-heading {
    font-family: "Arial";
    border-bottom: 1px solid #eee;
    padding-bottom: 5px;
}

.panel-login {
    border: none;
    border-radius: 8px;
}

.input-group {
    position: relative;
    margin-bottom: 5px;
    display: block;
}

.login-input, .login-psw {
    margin-bottom: 15px;
}

    .login-input i, .login-psw i {
        position: absolute;
        top: 10px;
        left: 0;
        z-index: 999;
        border-right: 1px solid #ccc;
        height: 18px;
        padding-right: 6px;
        padding-left: 9px;
    }

.panel-login .input-group-addon {
    background: #58585B;
    border-radius: 0;
    color: #fff;
    height: 24px;
    display: inline-block;
    border: none;
    float: left;
    padding: 3px 10px;
    line-height: 24px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
}

#login-box label {
    font-weight: 500;
    margin-bottom: 5px;
    display: inline-block;
}

#login-box input {
    padding-left: 30px;
}

.form-group a {
    color: #333;
    display: inline-block;
    font-style: italic;
    margin-bottom: 5px;
    font-size: 14px;
}

    .form-group a:hover {
        background: none;
        color: #E1980B;
        text-decoration: none;
    }

#btn-login {
    border-radius: 2px;
    padding: 5px 15px;
    font-weight: 600;
    font-size: 1.1em;
    background: #0085ba;
    border: 1px solid #0085ba;
}

    #btn-login .fa {
        border-left: 1px solid #fff;
        padding-left: 10px;
        margin-left: 5px;
    }

.btn {
    border-radius: 0;
}

    .btn a {
        color: #fff;
        border-radius: 0;
    }

#CaptchaInputText {
    width: 100%;
    border: 1px solid #ddd;
}

.form-horizontal .radio, .form-horizontal .checkbox, .form-horizontal .radio-inline, .form-horizontal .checkbox-inline {
    padding-top: 0;
}

.copyright-info p {
    color: #fff;
    margin-top: 30px;
    font-size: 12px;
}

.copyright-info a {
    color: #fff;
}

    .copyright-info a:hover {
        text-decoration: none;
        background: none;
    }

#login-box .col-xs-6 .form-group {
    margin-left: 0px;
    margin-right: 0px;
}


@media only screen and (max-width:568px) {
    #login-box {
        width: 100%;
    }
}

@media only screen and (max-width:481px) {
    #login-box .col-xs-6 {
        width: 100%;
    }

        #login-box .col-xs-6 .input-group {
            display: block;
            margin-bottom: 10px;
        }
}

@media only screen and (max-width:414px) {
    #login-box .col-xs-8, #login-box .col-xs-4 {
        width: 100%;
        display: block;
    }

        #login-box .col-xs-4 button {
            float: none !important;
        }
}
