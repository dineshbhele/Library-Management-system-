@{
    ViewBag.Title = "Index";
    int counter = 1;

}
<div class="title clearfix">
    <h3>Party</h3>
</div>
<button id="AddEditButton" class="btn btn-add pull-right"><i class="fa fa-plus"></i>Add New</button>
<div class="clearfix"></div>

<div id="pop-up-div" class="modal fade" role="dialog">
</div>
