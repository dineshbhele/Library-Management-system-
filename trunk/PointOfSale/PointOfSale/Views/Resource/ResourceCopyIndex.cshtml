     function GenerateIssueList(ResourceCopyId) {
         
        $.ajax({
            type: 'GET',
            url: '@Url.Content("~/ResourceIssue/ResourceIssueIndex")',
            data: { ResourceCopyId: ResourceCopyId },
            success: function (result) {
                $('#pop-up-div').html(result).modal({
                    'show': true,
                    'backdrop': 'static'
                })

            },
            error: function () {

            }
        });
